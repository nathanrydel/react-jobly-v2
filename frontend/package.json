      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1",
      "^~providers/(.*)$": "<rootDir>/src/providers/$1",
      "^~providers$": "<rootDir>/src/providers/index.ts",
      "^~constants/(.*)$": "<rootDir>/src/constants/$1",
      "^~pages/(.*)$": "<rootDir>/src/pages/$1"
    }
